{
  "name": "@cheqd/mcp-toolkit-server",
  "version": "1.0.0",
  "packageManager": "pnpm@9.1.3",
  "description": "Package to run an configurable mcp server",
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "type": "module",
  "bin": {
    "cheqd-mcp-toolkit-server": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/*.js",
    "start": "node build/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf ./build",
    "format": "prettier --config ../../.prettierrc.json --write 'src/**/*.{js,ts,cjs,mjs,json}'"
  },
  "keywords": [
    "cheqd",
    "mcp-toolkit",
    "mcp"
  ],
  "author": "Cheqd Foundation Limited (https://github.com/cheqd)",
  "license": "Apache-2.0",
  "dependencies": {
    "@cheqd/mcp-toolkit-credo": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "dotenv": "^16.4.7",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }  
}
